<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_background"
                android:padding="3dp"
                android:text="Task Name"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:id="@+id/txtTaskName"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/txtTaskName"
                android:layout_marginTop="1dp"
                android:background="@drawable/frame_background"
                android:padding="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#f1f8ff"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Task Duration : "
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryText"
                        android:text="0 Mins"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:id="@+id/txtTaskDuration"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Assigned To : "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No One"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/txtTaskAssignedTo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#f1f8ff"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Assigned Time : "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/colorPrimaryText"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:id="@+id/txtAssignedTime"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Task Status : "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not Completed"
                        android:textColor="@color/colorPrimaryText"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:id="@+id/txtTaskStatus"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="#f1f8ff">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Task Video : "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Click To Open"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:id="@+id/txtTaskVideo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Created On : "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01-01-2001 01:01:01"
                        android:textColor="@color/colorPrimaryText"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:id="@+id/txtTimestamp"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>